<div class="container">
  <div class="row">
    <div class="span8 offset2 center">
     <h2 class="smallTitle">Sign in</h2><br>
     <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
     <%= f.label :email , :class => "smallText" %>
     <%= f.email_field :email %><br><br>

     <%= f.label :password, :class => "smallText" %>
     <%= f.password_field :password %>

     <% if devise_mapping.rememberable? -%>
     <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "smallText" %></div>
     <% end -%>

     <div><%= f.submit "Sign in", :class => "button" %></div>
     <% end %>
     <%= link_to "Back To Search", root_path %><br>

     <%= render "devise/shared/links" %>

   </div>
 </div>
</div>
