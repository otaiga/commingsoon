<div class="container">
  <div class="row">
    <div class="span8 offset2 center">
     <h2 class="smallTitle">Sign in</h2>
     <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
     <div><%= f.label :email , :class => "smallText" %><br />
     <%= f.email_field :email %></div>

     <div><%= f.label :password, :class => "smallText" %><br />
     <%= f.password_field :password %></div>

     <% if devise_mapping.rememberable? -%>
     <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "smallText" %></div>
     <% end -%>

     <div><%= f.submit "Sign in", :class => "button" %></div>
     <% end %>

     <%= render "devise/shared/links" %>

   </div>
 </div>
</div>
