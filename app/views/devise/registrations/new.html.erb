<div class="container">
  <div class="row">
    <div class="span8 offset2 center">
     <h2 class="smallTitle">Sign up</h2>
     <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
     <%= devise_error_messages! %>

     <div><%= f.label :email, :class => "smallText" %><br />
     <%= f.email_field :email %></div>

     <div><%= f.label :password, :class => "smallText" %><br />
     <%= f.password_field :password %></div>

     <div><%= f.label :password_confirmation, :class => "smallText" %><br />
     <%= f.password_field :password_confirmation %></div>

     <div><%= f.submit "Sign up", :class => "button" %></div>
     <% end %>

     <%= render "devise/shared/links" %>

  </div>
 </div>
</div>
