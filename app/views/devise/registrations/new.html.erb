<div class="container">
  <div class="row">
    <div class="span8 offset2 center">
     <h2 class="smallTitle">Sign up</h2><br>
     <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
     <%= devise_error_messages! %>

     <%= f.label :email, :class => "smallText" %>
     <%= f.email_field :email %><br><br>

     <%= f.label :password, :class => "smallText" %>
     <%= f.password_field :password %><br><br>

     <%= f.label :password_confirmation, :class => "smallText" %>
     <%= f.password_field :password_confirmation %>

     <div><%= f.submit "Sign up", :class => "button" %></div>
     <% end %>
     <%= link_to "Back To Search", root_path %><br>

     <%= render "devise/shared/links" %>

  </div>
 </div>
</div>
