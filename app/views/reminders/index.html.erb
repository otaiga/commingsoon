<div class="container">
  <div class="row">
    <div class="span8 offset2 center">
      <% if !@reminders.empty? %>
        <table class="reminder">
          <th>
            <tr>
              <td class="thread">Movie Name</td>
              <td class="thread">Release date</td>
              <td class="thread">Actions</td>
            </tr>
          </th>
        <% @reminders.each do |reminder| %>
          <%if reminder.movie %>
              <tr>
                <td class="smallText"><%= reminder.movie.name unless reminder.movie.name == nil %> </td>
                <td class="smallText"><%= reminder.movie.release_date %> </td>
                <td class="smallText"><%= link_to "X", reminder_path(reminder), :confirm => "Are you sure you want to remove this reminder?", method: :delete %></td>
              </tr>
          <% end %>
        <% end %>
        </table>
      <% else %>
        <p class="smallText">You have no reminders set</p>
      <% end %>
    </div>
  </div>
</div>